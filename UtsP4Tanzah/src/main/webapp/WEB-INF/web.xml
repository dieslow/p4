<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>UtsP4Tanzah</display-name>
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>FormMahasiswaServlet</servlet-name>
        <servlet-class>com.utsp4.tanzah.servlet.FormMahasiswaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataMahasiswa</servlet-name>
        <servlet-class>com.utsp4.tanzah.servlet.DataMahasiswa</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormMahasiswaServlet</servlet-name>
        <url-pattern>/FormMahasiswaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataMahasiswa</servlet-name>
        <url-pattern>/DataMahasiswa</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>DataMahasiswa</welcome-file>
    </welcome-file-list>
</web-app>
